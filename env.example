# Atomic Bundler Environment Configuration

# Application Configuration
RUST_LOG=info
CONFIG_PATH=config.yaml
HTTP_PORT=8080
HTTP_HOST=0.0.0.0

# Database Configuration
DATABASE_URL=sqlite:data/atomic_bundler.db

# Network Configuration
ETHEREUM_NETWORK=mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY

# Builder Relay URLs (override config.yaml if needed)
FLASHBOTS_RELAY_URL=https://relay.flashbots.net
BEAVERBUILD_RELAY_URL=https://rpc.beaverbuild.org
TITAN_RELAY_URL=https://rpc.titanbuilder.xyz

# Security Configuration
ADMIN_API_KEY=your-admin-api-key-here
KILLSWITCH_ENABLED=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_NAMESPACE=atomic_bundler

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=logs/atomic_bundler.log

# Development Settings
DEV_MODE=false
MOCK_RELAYS=false

# Operational Limits (Wei values)
MAX_DAILY_VOLUME_WEI=500000000000000000
MAX_PER_BUNDLE_CAP_WEI=2000000000000000
EMERGENCY_STOP_THRESHOLD_WEI=100000000000000000

# Timeouts (seconds)
RELAY_TIMEOUT_SECONDS=30
SIMULATION_TIMEOUT_SECONDS=10
BUNDLE_EXPIRY_SECONDS=300
